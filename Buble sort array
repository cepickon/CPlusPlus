#include <stdio.h> 

void WriteArray(int* array, const size_t SIZE) {
    for (int i = 0; i < SIZE; i++){
        printf("%d ", array[i]);
    }
    printf("\n");
}

void bubSorArray(int* array, const size_t SIZE) { 
    int l = 0; 
    for (int i = 0; i < SIZE; i++) { 
        for (int j = 0; j < SIZE - 1; j++) { 
            if (array[j] > array[j + 1]) { 
                l = array[j]; 
                array[j] = array[j + 1]; 
                array[j + 1] = l; 
            }
        }
    }
} 

int main() { 
    const size_t SIZE = 10; 
    int array[SIZE] = {3, 2, 5, 4, 0, 1, 9, 7, 6, 8}; 
    bubSorArray(array,SIZE); 
    writeArray(array, SIZE); 
} 
