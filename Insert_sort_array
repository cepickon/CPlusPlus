#include <stdio.h>
 
void WriteArray(int* array, const size_t SIZE) {
    for (int i = 0; i < SIZE; i++){
        printf("%d ", array[i]);
    }
    printf("\n");
}
 
void InsSor(int* array, int lastIndx){
    int insItem = array[lastIndx];
    size_t i = lastIndx - 1;
    for (; i >= 0; i--) {
        if (array[i] >= insItem) {
            array[i + 1] = array[i];
        }
        else{
            break;
        }
    }
    array[i + 1] = insItem;
}
 
void InsSorArray(int* array, const size_t SIZE) {
    for (int i = 0; i < SIZE; i++) {
        InsSor(array, i);
    }
}
 
int main(){
    const size_t SIZE = 10;
    int array[SIZE] = { 4, 2, 8, 1, 5, 6, 0, 3, 9, 7 };
    WriteArray(array, SIZE);
    InsSorArray(array, SIZE);
    WriteArray(array, SIZE);
}
